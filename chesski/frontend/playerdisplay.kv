<PlayerDisplay@BoxLayout>:
    orientation: 'vertical'
    size_hint: 1, .3

####### Outer Container #####################################

    BoxLayout:
        orientation: 'horizontal'
        canvas.before:
            Color:
                rgba: 0, 0, 0, .08
            Rectangle:
                size: self.size
                pos: self.pos
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height

####### Container Black Player #####################################

        BoxLayout:
            orientation: 'vertical'
            ################ upper Black ###########################
            BoxLayout:
                orientation: 'horizontal'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .08
                    Rectangle:
                        size: self.size
                        pos: self.pos

                Label:
                    text: ' Black Player'
                    font_size: max(dp(10), self.height-dp(8))
                    text_size: self.size
                    halign: 'left'
                    font_name: root.parent.parent.parent.parent.graphics_path + font_path
                Label:
                    font_size: max(dp(10), self.height-dp(10))
                    font_name: root.parent.parent.parent.parent.graphics_path + font_path
                    text: root.parent.parent.parent.parent.black_material_text
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
            ################ lower Black ###########################
            StackLayout:
                id: black_stack
                orientation: 'lr-tb'
                # spacing: dp(5)
                pos_hint: {'x': .02}

####### Container White Player #####################################

    BoxLayout:
        orientation: 'horizontal'
        canvas.before:
            Color:
                rgba: 1, 1, 1, .3
            Rectangle:
                size: self.size
                pos: self.pos
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        ################ upper White ###########################
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .08
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    text: ' White Player'
                    font_size: max(dp(10), self.height-dp(8))
                    text_size: self.size
                    halign: 'left'
                    font_name: root.parent.parent.parent.parent.graphics_path + font_path
                Label:
                    font_size: max(dp(10), self.height-dp(10))
                    font_name: root.parent.parent.parent.parent.graphics_path + font_path
                    text: root.parent.parent.parent.parent.white_material_text
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
            ################ lower White ###########################
            StackLayout:
                id: white_stack
                orientation: 'lr-tb'
                # spacing: dp(5)
                pos_hint: {'x': .02}
